    "Outputs": {
        "GetAttTagTableStreamArn": {
            "Description": "Your DynamoDB table StreamArn.",
            "Value": {
                "Fn::GetAtt": [
                    "TagTable",
                    "StreamArn"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Join": [
                        ":",
                        [
                            {
                                "Ref": "AppSyncApiId"
                            },
                            "GetAtt",
                            "TagTable",
                            "StreamArn"
                        ]
                    ]
                }
            }
        },
        "GetAttTagDataSourceName": {
            "Description": "Your model DataSource name.",
            "Value": {
                "Fn::GetAtt": [
                    "TagDataSource",
                    "Name"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Join": [
                        ":",
                        [
                            {
                                "Ref": "AppSyncApiId"
                            },
                            "GetAtt",
                            "TagDataSource",
                            "Name"
                        ]
                    ]
                }
            }
        },
        "GetAttTagTableName": {
            "Description": "Your DynamoDB table name.",
            "Value": {
                "Ref": "TagTable"
            },
            "Export": {
                "Name": {
                    "Fn::Join": [
                        ":",
                        [
                            {
